<c:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:t="sap.ui.table">
	<Panel id="limitPanel" expandable="true" expanded="{overview>/entitlementsExpanded}" headerText="{i18n>limitTabTitle}" width="auto">
		<!--updateFinished must be replaced -->
		<Table id="limitTable" items="{}" updateFinished="onUpdateFinishedLimits" growing="false" inset="false" growingScrollToLoad="false" busyIndicatorDelay="0">
			<headerToolbar>
				<OverflowToolbar>
					<Title id="limitCount" text="{path: 'overview>/limCount', formatter: '.formatter.itemCountFormatter'}" titleStyle="Auto" level="Auto" visible="{= !${device>/system/phone}}"/>
					<ToolbarSpacer/>
					<Label text="{i18n>showOn}" visible="{= !${device>/system/phone}}"/>
					<DatePicker id="limitDatePicker" value="{ path: 'overview>/limitStartDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true , UTC: false } }" change="onLimitDateChanged" width="10rem" tooltip="{i18n>showLimitFrom}" ariaLabelledBy="limitDatePickerAccLabel"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<!-- Leave Type -->
				<Column id="leaveLimitTypeCol">
					<Text text="{i18n>leaveTypTxt}"/>
				</Column>
				<!-- Available  -->
				<Column id="availableLimitCol" hAlign="{= ${device>/system/phone} ? 'End' : 'Center'}">
					<Text text="{i18n>availableText}"/>
				</Column>
				<!-- Planned  -->
				<!-- <Column id="plannedLimitCol" hAlign="Center" minScreenWidth="Tablet" demandPopin="false">
					<Text text="{i18n>plannedLimitText}"/>
				</Column> -->
			</columns>
			<items>
				<ColumnListItem type="{= ${device>/system/phone} ? 'Navigation' : 'Inactive' }" id="limitColumnListItem">
					<cells>
						<!-- Leave Type -->
						<ObjectIdentifier title="{ZzLimnLtext}" class="sapMTableContentMargin"/>
						<!-- Available  -->
						<ObjectNumber class="sapMTableContentMargin" emphasized="true" number="{path:'AvailableQuantity', 
							type: 'sap.ui.model.odata.type.Decimal', formatOptions: { decimals : 2 }}" state="Success" unit="{parts:[{path: 'AvailableQuantity'}, {path: 'TimeUnitCode'}, {path: 'TimeUnitName'}], formatter:'.formatter.formatEntitlementTimeunit'}"/>
						<!-- Planned  -->
						<ObjectNumber class="sapMTableContentMargin" emphasized="true" number="{path:'PlannedAmount', 
							type: 'sap.ui.model.odata.type.Decimal', formatOptions: { decimals : 2 }}" state="None" unit="{parts:[{path: 'PlannedAmount'}, {path: 'TimeUnitCode'}, {path: 'TimeUnitName'}], formatter:'.formatter.formatEntitlementTimeunit'}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	<!-- 	<FlexBox alignItems="Start" justifyContent="Start">
			<Label text="{i18n>plannedLimitText}" class="sapUiMediumMarginEnd sapUiSmallMarginBegin sapUiSmallMarginTop" visible="true"/>
			<ObjectNumber class="sapMTableContentMargin sapUiSmallMarginTop" emphasized="true" number="{path:'overview>/PlannedAmount', 
							type: 'sap.ui.model.odata.type.Decimal', formatOptions: { decimals : 2 }}" state="None" unit="{parts:[{path: 'overview>/PlannedAmount'}, {path: 'overview>/TimeUnitCode'}, {path: 'overview>/TimeUnitName'}], formatter:'.formatter.formatEntitlementTimeunit'}"/>
		</FlexBox> -->


	</Panel>

</c:FragmentDefinition>